{
  "prompts": {
    "name": {
      "type": "string",
      "required": true,
      "label": "Project name（项目名称）"
    },
    "description": {
      "type": "string",
      "required": true,
      "label": "Project description（项目描述）",
      "default": "A Vue.js project"
    },
    "author": {
      "type": "string",
      "label": "Author（作者）"
    },
    "license": {
      "type": "string",
      "label": "License（许可证）",
      "default": "MIT"
    },
    "less": {
       "type": "confirm",
       "message": "Use less（使用less）?",
       "default": false
    }
  },
  "completeMessage": "{{#inPlace}}To get started:\n\n  npm install\n  npm run dev{{else}}To get started:\n\n  cd {{destDirName}}\n  npm install\n  npm run dev{{/inPlace}}"
}
